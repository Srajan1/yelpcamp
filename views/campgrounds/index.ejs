<% layout('layouts/Boilerplate') %> 
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add new campground</a>
        <% for(let campground of campgrounds){ %> 
            <div class="card-panel row">
                <div class = "col m4"><img  class="responsive-img" src="<%=campground.image%>" alt=""></div>
                
                <div class="col m8">
                    <h5><%= campground.title %> </h5>
                    <p><%= campground.description %> </p>
                    <p class="grey-text"><%= campground.location %> </p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn waves-effect waves-light">View campground</a>
                </div>
            </div>
        <% } %> 