<% layout('layouts/Boilerplate') %> 
<br>
<div class="row">
    <div class="col l6 offset-l3 m12 s12">
        <form action="/campgrounds" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" name="campground[title]" placeholder="title" id="title">
            </div>
            <div class="row">
                <div class="col">
                    <div>
                        <label for="location">Location</label>
                        <input type="text" name="campground[location]" placeholder="location" id="location">
                    </div>
                </div>
                <div class="col">
                    <div>
                        <label for="price">price</label>
                        <input type="number" name="campground[price]" placeholder="0" id="price">
                    </div>
                </div>
            </div>
            <div>
                <label for="image">Image URL</label>
                <input type="text" name="campground[image]" placeholder="image" id="image">
            </div>
            <div>
                <label for="description">Description</label>
                <textarea type="text" name="campground[description]" placeholder="description" id="description"></textarea>
            </div>
            <button class="btn green">Add campground</button>
        </form>
        <a href="/campgrounds">View all campgrounds</a>
    </div>
</div>

